<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserMainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">
        <androidx.core.widget.ContentLoadingProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/progressbarEngineerUserActivity"/>
        <RelativeLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/colorPrimary"
            >
            <ImageView
                android:id="@+id/userProfileEngineerUserActivity"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/anmol"
                android:layout_margin="24dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/usernameEngineerUserActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/emailEngineerUserActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="emailaddress@online.com"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="italic"
                android:textSize="18dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="57sp"/>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:padding="15dp"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="7.5dp"
                >
                <ImageView
                    android:id="@+id/computerEngineerUserActivity"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/mer7"
                    android:layout_marginStart="-5dp"
                    android:layout_marginTop="-15dp"/>
                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Computer Engineer"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="7.5dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/mechanicalEngineerUserActivity"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="-9dp"
                    android:src="@drawable/mer4"
                    />
                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mechanical Engineer"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:padding="15dp"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="7.5dp"

                >
                <ImageView
                    android:id="@+id/carpenterEngineerUserActivity"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="-22dp"
                    android:src="@drawable/mer25"/>
                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carpenter Engineer"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="7.5dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/civilEngineerUserActivity"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/mer6"/>
                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Civil Engineer"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:padding="15dp"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="7.5dp"
                >
                <ImageView
                    android:id="@+id/architectureEngineerUserActivity"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="-24dp"
                    android:src="@drawable/aer"/>
                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Architecture Engineer"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="7.5dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/electricalEngineerUserActivity"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="-15dp"
                    android:src="@drawable/mer20"/>
                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electrical Engineer"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:padding="15dp"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="7.5dp"
                >
                <ImageView
                    android:id="@+id/profileEngineerUserActivity"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="-28dp"
                    android:layout_marginLeft="-7dp"
                    android:src="@drawable/mer13"/>
                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Profile"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7.5dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/editProfileEngineerUserActivity"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/mer2"/>
                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>
</ScrollView>